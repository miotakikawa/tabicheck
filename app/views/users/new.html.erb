<h1> 新規登録</h1>
<div>
<%= form_with model: @user, url: users_create_path, local: true do |f| %>
<div>
 <%= f.label :name, "名前" %>
 <%= f.text_field :name %>
</div>
<div>
 <%= f.label :email, "メールアドレス" %>
 <%= f.text_field :email %>
</div>
<div>
 <%= f.label :password, "パスワード" %>
 <%= f.password_field :password %>
</div>
<div>
 <%= f.label :password_confirmation, "確認用パスワード" %>
 <%= f.password_field :password_confirmation %>
</div>

<div>
 <%= f.submit "登録する", class:"btn btn-success" %>
</div>
<% end %>
</div>
