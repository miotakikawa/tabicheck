<div class="container">
<div class="alert col-5 d-flex" role="alert">
<h2> 新規登録</h2>
</div>
<%= form_with model: @user, url: users_create_path, local: true do |f| %>
<table>
<tr>
 <td><%= f.label :name, "名前" %></td>
 <td><%= f.text_field :name %></td>
</tr>
<tr>
 <td><%= f.label :email, "メールアドレス" %></td>
 <td><%= f.text_field :email %></td>
</tr>
<tr>
 <td><%= f.label :password, "パスワード" %></td>
 <td><%= f.password_field :password %></td>
</tr>
<tr>
 <td><%= f.label :password_confirmation, "確認用パスワード" %></td>
 <td><%= f.password_field :password_confirmation %></td>
</tr>
</table><br><br>
<div>
 <%= f.submit "登録する", class:"btn btn-success" %>
</div>

<% end %>
</div>
