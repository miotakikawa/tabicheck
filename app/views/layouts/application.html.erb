<!DOCTYPE html>
<html>
  <head>
     <title class="font">
     tabicheck
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
    <div class="container">
    <div class="row">
    <div class="col-sm-4 pull-right d-flex align-items-center">
    <div class="tabi">tabicheck</div>
    </div>

   <div class="col-sm-8 d-flex flex-row-reverse bd-highlight">
   <nav class="navbar navbar-light bg-white" >
    <% if signed_in? %>
    <div class="navbar-right">
     <button type="button" class="btn btn-outline-secondary" >
      <%= link_to "持ち物チェック", new_list_path%>
     </button>
     <button type="button" class="btn btn-outline-secondary" >
      <%= link_to "思い出投稿", new_memory_path %>
     </button>
     <button type="button" class="btn btn-outline-secondary" >
      <%= link_to "投稿一覧", memories_path %>
     </button>
     <button type="button" class="btn btn-outline-secondary" >
      <%= link_to "ログアウト", logout_path, method: :delete %>
     </button>
     </div>
   </nav>
    <% else %>
    <div class="container1">
     <button type="button" class="btn btn-outline-secondary" >
      <%= link_to "新規登録", users_new_path %>
     </button>
     <button type="button" class="btn btn-outline-secondary">
      <%= link_to "ログイン", login_path %>
      </div>
     </button>
    <% end %>


    </div>
    </div>
    </div>

    </header><br>

    <main>
    <div class="container">


      <%= yield %>

    </div>
  </main>
  </body>
</html>
